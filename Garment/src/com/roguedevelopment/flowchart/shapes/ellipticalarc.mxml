<BaseShape xmlns="com.roguedevelopment.flowchart.shapes.*" 
		   xmlns:mx="http://www.adobe.com/2006/mxml"
		   xmlns:degrafa="com.degrafa.*" 
		   width="150" height="150" 
		   xmlns:degrafa1="http://www.degrafa.com/2007"
		   xmlns:geometry="com.degrafa.geometry.*"
		     
		   >
		   
		   <!--
		     Future todo: When Degrafa comes out with their transform classes, we'll be able to easily
		                  scale polygon objects.  Then we'll be able to allow this shape to be resized.
		   -->
		   
		   <degrafa:Surface width="{width}" height="100%">

		   		<degrafa:GeometryGroup >

        			<geometry:EllipticalArc 
        				fill="{background}"
        				stroke="{stroke}"
        				closureType="pie"
                		arc="315" width="{width}" height="{height}" 
                		x="0" 
                		y="0" 
                		startAngle="300" 
        				/>
			          
			           
			           

			        
        
		   			
		   		</degrafa:GeometryGroup>
		   </degrafa:Surface>
	
</BaseShape>
